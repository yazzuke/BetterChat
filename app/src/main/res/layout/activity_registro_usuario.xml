<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registrouser"
    tools:context=".Activity_RegistroUsuario">


    <EditText
        android:id="@+id/EditText_UsuarioRegistro"
        android:textColor="#707070"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="7dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="usuario"
        app:layout_constraintBottom_toTopOf="@+id/EditText_EmailRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditText_EmailRegistro"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:textColor="#707070"
        android:layout_marginStart="81dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="11dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/ConstantEmail"
        app:layout_constraintBottom_toTopOf="@+id/EditText_PasswordRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/EditText_PasswordRegistro"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="372dp"
        android:layout_marginEnd="110dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/ConstantContraseña"
        android:textColor="#707070"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditText_PasswordConfirm"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="5dp"
        android:background="@null"
        android:ems="10"
        android:hint="Confirmar contraseña"
        android:inputType="textPersonName"
        android:textColor="#707070"
        app:layout_constraintBottom_toTopOf="@+id/button_RegistrarUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_RegistrarUsuario"
        android:layout_width="225dp"
        android:layout_height="51dp"
        android:layout_marginStart="93dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="183dp"
        android:backgroundTint="#0A4D68"
        android:text="@string/ConstantContinuar"
        android:textStyle="bold"
        app:iconTint="#0A4D68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="306dp"
        android:layout_height="66dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/EditText_UsuarioRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logobetterchat" />


</androidx.constraintlayout.widget.ConstraintLayout>