<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backsubetumood"
    tools:context=".Activity_SubirEstado">

    <EditText
        android:id="@+id/editText_EditaTuEstado"
        android:layout_width="281dp"
        android:layout_height="238dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="220dp"
        android:background="@null"
        android:layout_marginEnd="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Escribe tu mood..."
        app:layout_constraintBottom_toTopOf="@+id/button_SubirEstado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_SubirEstado"
        android:layout_width="113dp"
        android:layout_height="44dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="229dp"
        android:backgroundTint="#0A4D68"
        android:text="subir"
        android:textStyle="bold"
        app:iconTint="#0A4D68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_SubirImagen"
        app:layout_constraintTop_toBottomOf="@+id/editText_EditaTuEstado" />

    <ImageView
        android:id="@+id/imageView_SubirImagen"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginStart="183dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="199dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_SubirEstado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_EditaTuEstado"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/subirimagenestado" />
</androidx.constraintlayout.widget.ConstraintLayout>